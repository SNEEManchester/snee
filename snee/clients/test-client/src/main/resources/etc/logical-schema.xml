<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://snee.cs.man.ac.uk/namespace/logical-schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://snee.cs.man.ac.uk/namespace/logical-schema ../../schema/logical-schema.xsd">
	
      <stream name="HerneBay_Tide" type="push">
    	<column name="timestamp">
        	<type class ="timestamp"/>
         </column>
         <column name="Observed">
          	<type class ="float"/>
         </column>
         <column name="Tz">
          	<type class ="integer"/>
         </column>
         <column name="Hs">
          	<type class ="boolean"/>
         </column>
         <column name="Hmax">
          	<type class ="string"/>
         </column>
         <column name="Tp">
          	<type class ="decimal"/>
         </column>
     </stream>
     
     <stream name="HerneBay_Met" type="push">
     	<column name="timestamp">
     		<type class="timestamp"/>
     	</column>
         <column name="Air_pressure">
          	<type class ="float"/>
         </column>
         <column name="Wind_speed">
          	<type class ="integer"/>
         </column>
         <column name="Gust_speed">
          	<type class ="boolean"/>
         </column>
         <column name="WDir">
          	<type class ="string"/>
         </column>
         <column name="TAir">
          	<type class ="decimal"/>
         </column>
     </stream>
     
     <stream name="PushStream" type="push">
     	<column name="timestamp">
     		<type class="timestamp"/>
     	</column>
         <column name="floatAttr">
          	<type class ="float"/>
         </column>
         <column name="intAttr">
          	<type class ="integer"/>
         </column>
         <column name="boolAttr">
          	<type class ="boolean"/>
         </column>
         <column name="stream_name">
          	<type class ="string"/>
         </column>
         <column name="decAttr">
          	<type class ="decimal"/>
         </column>
     </stream>

     <stream name="Forest" type="push">
     	<!--column name="ts">
     		<type class="timestamp"/>
     	</column-->
         <column name="moisture">
          	<type class ="float"/>
         </column>
         <column name="temperature">
          	<type class ="float"/>
         </column>
     </stream>


    	<!--column name="timestamp">
        	<type class ="float"/>
         </column-->
      <stream name="forestMoisture" type="push">
         <column name="moisture">
          	<type class ="float"/>
         </column>
     </stream>

	<!-- Testing for the newly created schema, that takes DATs into account. This is a testing
	table for the Linear Regression, so we only have 2 columns. -->
     	<!--column name="ts">
     		<type class="timestamp"/>
     	</column-->
      <stream name="forestLRF" isIntensional="true" type="push">
         <column name="temperature">
          	<type class ="float"/>
         </column>
         <column name="moisture">
          	<type class ="float"/>
         </column>
         <datParams type="CLASSIFIER" subtype="LinearRegressionFunction">
			<derivedAttribute name="temperature"/>
			<source>SELECT moisture, temperature FROM Forest[FROM NOW-1 HOUR TO NOW]</source>
         </datParams>
     </stream>     
</schema>
